<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="manager.FileManagerController">
    <MenuBar>
        <Menu text="File">
            <MenuItem fx:id="fileMenu" text="Exit"/>
        </Menu>
    </MenuBar>
    <HBox>
        <ComboBox fx:id="diskComboBox"/>
        <TextField fx:id="pathTextField" HBox.hgrow="ALWAYS" editable="false"/>
        <Button fx:id="upButton" text="Up"/>
    </HBox>
    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS" />
    <HBox spacing="5">
        <Button fx:id="copyButton" maxWidth="Infinity" text="Copy" HBox.hgrow="ALWAYS"/>
        <Button fx:id="moveButton" maxWidth="Infinity" text="Move" HBox.hgrow="ALWAYS"/>
        <Button fx:id="deleteButton" maxWidth="Infinity" text="Delete" HBox.hgrow="ALWAYS"/>
        <Button fx:id="exitButton" maxWidth="Infinity" text="Exit" HBox.hgrow="ALWAYS"/>
        <padding>
            <Insets top="5" left="5" right="5" bottom="5"/>
        </padding>
    </HBox>
</VBox>
